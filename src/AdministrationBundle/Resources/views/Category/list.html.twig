{% extends 'AdministrationBundle::layout_sonata.html.twig' %}



  {% block scripthead %}
      {{ parent() }}
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  {% endblock %}

{% block container %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">List des Produits</h3>

            <div class="panel-options">

                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">&ndash;</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    &times;
                </a>
            </div>
        </div>
        <div class="panel-body">
            <center>
            <a href="{{ path('category_add') }}" class="btn btn-info btn-sm btn-icon icon-right" style="width: 100%">
                Ajouter Nouveaux
            </a>
            </center>
            <br><br>

            <table class="table table-striped table-bordered" id="example-3">
                <thead>
                <tr class="replace-inputs">
                    <th>ID Categorie</th>
                    <th>Nom</th>
                    <th>Designation</th>
                    <th>description1</th>
                    <th>description2</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>


                {% for category in categories %}
                    <tr>
                        <td><a href="{{ path('category_show', { 'id': category.id }) }}"> {{ category.id }} </a></td>
                        <td>{{ category.code }}</td>
                        <td>{{ category.designation }}</td>
                        <td class="center">4</td>
                        <td class="center">X</td>


                        <td>
                            <a href="#" class="btn btn-secondary btn-sm btn-icon icon-left">
                                Edit
                            </a>

                            <a href="#" class="btn btn-danger btn-sm btn-icon icon-left">
                                Delete
                            </a>

                            <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-info btn-sm btn-icon icon-left">
                                Show
                            </a>
                        </td>


                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>ID Categorie</th>
                    <th>Nom</th>
                    <th>Designation</th>
                    <th>description1</th>
                    <th>description2</th>
                    <th>Action</th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}

{% block scriptfooter %}
    {{ parent() }}

    <!-- Imported scripts on this page -->
    <script src="{{ asset('bundles/administration/assets/js/datatables/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('bundles/administration/assets/js/datatables/dataTables.bootstrap.js')}}"></script>
    <script src="{{ asset('bundles/administration/assets/js/datatables/yadcf/jquery.dataTables.yadcf.js')}}"></script>
    <script src="{{ asset('bundles/administration/assets/js/datatables/tabletools/dataTables.tableTools.min.js')}}"></script>
    <script type="text/javascript">
        jQuery(document).ready(function($)
        {
            $("#example-3").dataTable().yadcf([
                {column_number : 0},
                {column_number : 1, filter_type: 'text'},
                {column_number : 2, filter_type: 'text'},
                {column_number : 3, filter_type: 'range_number'},
                {column_number : 4},
            ]);
        });
    </script>
{% endblock %}