{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if cart.date %}{{ cart.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cart_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
